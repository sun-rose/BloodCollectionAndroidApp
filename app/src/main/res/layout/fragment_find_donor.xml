<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".FindDonorFragment.FindDonor"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choose_blood_group"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_gravity="left"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:rowCount="3"
        android:columnCount="3"
        android:layout_gravity="center">

        <Button
            android:id="@+id/btn_ap"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/bgroup_button_background"
            android:text="A+"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/btn_op"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/bgroup_button_background"

            android:text="O+"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/btn_bp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/bgroup_button_background"

            android:text="B+"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/btn_abp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/bgroup_button_background"

            android:text="AB+"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/btn_b"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/bgroup_button_background"

            android:text="B"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/btn_am"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/bgroup_button_background"

            android:text="A-"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/btn_opm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/bgroup_button_background"
            android:text="O-"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/btn_bm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/bgroup_button_background"
            android:text="B-"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/btn_abm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/bgroup_button_background"
            android:text="AB-"
            android:textColor="@android:color/black" />
    </GridLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Location"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_gravity="start"/>

    <EditText
        android:id="@+id/edit_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="15sp"
        android:hint="@string/enter_your_location"
        android:drawableStart="@drawable/ic_location" />

    <Button
        android:id="@+id/btn_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="SEARCH"
        android:background="@android:color/holo_red_light"
        android:textColor="@android:color/white" />



</LinearLayout>
